{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@gshl-env": ["./src/env.js"],
      "@gshl-components/team/*": ["./src/components/team/*"],
      "@gshl-components/draft/*": ["./src/components/draft/*"],
      "@gshl-components/contracts/*": ["./src/components/contracts/*"],
      "@gshl-components/league/*": ["./src/components/league/*"],
      "@gshl-components/admin": ["./src/components/admin/index.ts"],
      "@gshl-components/*": ["./src/components/*"],
      "@gshl-ui": ["./src/components/ui/index.ts"],
      "@gshl-nav": ["./src/components/ui/nav/index.ts"],
      "@gshl-skeletons": ["./src/components/skeletons/index.ts"],
      "@gshl-hooks": ["./src/lib/hooks/index.ts"],
      "@gshl-hooks/*": ["./src/lib/hooks/*"],
      "@gshl-sheets": ["./src/lib/sheets/index.ts"],
      "@gshl-cache": ["./src/lib/cache/index.ts"],
      "@gshl-types": ["./src/lib/types/index.ts"],
      "@gshl-utils": ["./src/lib/utils/index.ts"],
      "@gshl-utils/*": ["./src/lib/utils/*"],
      "@gshl-yahoo": ["./src/lib/yahoo/index.ts"],
      "@gshl-yahoo/*": ["./src/lib/yahoo/*"],
      "@gshl-nhl": ["./src/lib/nhl/index.ts"],
      "@gshl-nhl/*": ["./src/lib/nhl/*"],
      "@gshl-ranking": ["./src/lib/ranking/index.ts"],
      "@gshl-ranking/*": ["./src/lib/ranking/*"],
      "@gshl-styles": ["./src/styles/globals.css"],
      "@gshl-trpc": ["./src/trpc/index.ts"],
      "@gshl-trpc/*": ["./src/trpc/*"],
      "@gshl-server": ["./src/server/index.ts"],
      "@gshl-server/*": ["./src/server/*"],
      "@gshl-api": ["./src/server/api/index.ts"],
      "@gshl-api/*": ["./src/server/api/*"],
      "@gshl-actions": ["./src/actions/index.ts"],
      "@gshl-app/*": ["./src/app/*"],
      "@gshl-lib/*": ["./src/lib/*"]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/components/MatchupScroller"
  ],
  "exclude": ["node_modules"]
}

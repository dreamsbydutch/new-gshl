const WORKBOOK_ALIASES = {
  general: "GENERAL",
  "player days": "PLAYERDAYS",
  playerdays: "PLAYERDAYS",
  "player stats": "PLAYERSTATS",
  playerstats: "PLAYERSTATS",
  "team stats": "TEAMSTATS",
